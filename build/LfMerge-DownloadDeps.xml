<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<RootDir Condition="'$(RootDir)'==''">$(MSBuildProjectDirectory)/..</RootDir>
	</PropertyGroup>

	<Import Project="$(RootDir)/packages/BuildDependencyTasks.0.2.5.0/build/BuildDependencyTasks.targets"/>

	<Target Name="DownloadDependencies">
		<Dependencies DependencyFile="LfMerge.dep" UseDependencyFile="true" KeepJobsFile="true"
			WorkingDir="$(RootDir)" />
		<Exec Command="chmod +x $(RootDir)/Mercurial/hg"
			Condition="'$(OS)'!='Windows_NT'" />
	</Target>
</Project>
